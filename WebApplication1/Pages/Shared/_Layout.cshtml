@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diamante Core</title>

   
    
    <environment include="Development">
        <link rel="preconnect" href="https://fonts.googleapis.com" asp-append-version="true">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin asp-append-version="true">
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@600&display=swap" rel="stylesheet" asp-append-version="true">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>

    @RenderSection("Style", required: true)

</head>

<body>

    <header >
        <div class="menu  noMobile ">     
                
            <img src="~/assets/svg/icon_logo.svg" />
              
            <ul class=" menu ulmenu">
                <li class= "limenu"> 
                    <a class="limenu" asp-area="" asp-page="/Index">Home</a>
                </li>
                <li class="limenu">
                    <a class="limenu" asp-area="" asp-page="/Nosotros">Nosotros</a>
                </li>
                <li class ="limenu">
                    <a class="limenu" asp-area="" asp-page="/ComoComprar">Cómo comprar</a>
                </li>
                <li class="limenu">
                    <a class="limenu" asp-area="" asp-page="/Noticias">Noticias</a>
                </li>
                <li class= "limenu" >
                    <a class="limenu" asp-area="" asp-page="/Contacto">Contacto</a>
                </li>

             </ul>


            <button type="button" class="position-relative">
                <img src="~/assets/svg/u_shopping-bag.svg" />
                <span class="position-absolute top-0 start-100 translate-middle p-2 bg-info border border-light rounded-circle">
                    <span class="visually-hidden">New alerts</span>
                </span>
            </button>
           
        </div>

    </header>

    <!-- No tocar este  segmento, obligatorio el renderBody()-->
    <!-- <div >  class="container"  -->
        <main role="main">
            <!--  class="pb-3"  -->
            @RenderBody()
        </main>
    <!-- </div > -->



    <footer>
        <!-- DESKTOP -->
        <div>
           <h3> Contacto</h3>
           <nav class="displayRow redes">
                <a href="https://www.instagram.com/dietetica.diamantenatural/?hl=es-la" target="_blank">
                    <img src="~/assets/svg/u_instagram-alt.svg" />  </a>
                <a href="https://www.youtube.com/channel/UCz7EEauOlhVqcjbRMCBhYhA" target="_blank">
                    <img src="~/assets/svg/u_youtube.svg" />
               </a>
                <a href="https://www.facebook.com/dietetica.diamantenatural/" target="_blank">
                    <img src="~/assets/svg/u_facebook.svg" />
               </a>
           </nav>
            <h3> Mapa de sitio </h3>
            <ul>
                <li>  <a class="footerFont" asp-area="" asp-page="/Index">Home</a> </li>
                <li> <a class="footerFont" asp-area="" asp-page="/Nosotros">Nosotros</a> </li>
                <li> <a class="footerFont" asp-area="" asp-page="/Como_comprar">Cómo comprar</a>  </li>
                <li> <a class="footerFont" asp-area="" asp-page="/Noticias">Noticias</a> </li>
                <li> <a class="footerFont" asp-area="" asp-page="/Contacto">Contacto</a> </li>
            </ul>
            <p style="text-align:center; align-self: stretch;"> Todos los derechos están reservados  </p>
        </div>
    </footer>

   <!-- Acá de último van  las ventanas modales o toast(bootstrap5) de venta carrito, ya que debe estar accesible en todos las ventanas -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" asp-append-version="true">   </script>
    @await RenderSectionAsync("Scripts", required: false)

  
   
</body>
</html>


